{
    "compilerOptions": {
        "target": "ES2022", // enables top-level await, async/await
        "module": "NodeNext", // use native ES modules (import/export)
        "moduleResolution": "NodeNext",
        "esModuleInterop": true, // allows default imports for CommonJS
        "forceConsistentCasingInFileNames": true,
        "strict": true, // strict type-checking
        "skipLibCheck": true, // faster builds
        "outDir": "dist" // compiled JS output
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}
